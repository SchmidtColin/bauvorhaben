<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</head>
<body>
{% block body %}
    {{ block('fos_user_content') }}
    {% if is_granted('ROLE_USER') %}
        <a style="margin: 20px" class="waves-effect waves-light btn" href="logout">Logout</a>
        <br>
        <h2>Meine Projekte</h2>
        <a style="margin: 20px" class="waves-effect waves-light btn" href="">Übersicht meiner Bauobjekt</a>
        <br>
        <a style="margin: 20px" class="waves-effect waves-light btn" href="anfrage">Meine Anfragen</a>
        <br>
    {% else %}
        <a style="margin: 20px" class="waves-effect waves-light btn" href="login">Login</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <h2>Administration</h2>
        <a style="margin: 20px" class="waves-effect waves-light btn" href="register">Benutzer anlegen</a>
        <br>
        <a style="margin: 20px" class="waves-effect waves-light btn" href="">Übersicht aller Bauobjekt</a>
        <br>
        <a style="margin: 20px" class="waves-effect waves-light btn" href="anfrage/admin">Übersicht aller Bestellungen</a>
        <br>
    {% endif %}
{% endblock %}
</body>
</html>

